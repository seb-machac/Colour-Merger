{
  "name": "colour-adder",
  "productName": "Colour Merger",
  "version": "1.0.0",
  "description": "Simple Colour Merger App",
  "homepage": "https://github.com/seb-machac/Colour-Merger#readme",
  "bugs": {
    "url": "https://github.com/seb-machac/Colour-Merger/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seb-machac/Colour-Merger.git"
  },
  "license": "ISC",
  "author": "Sebma",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "build": "electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.sebma.colouradder",
    "productName": "Colour Merger",
    "win": {
      "icon": "build/favicon.ico",
      "target": "nsis"
    },
    "nsis": {
      "installerIcon": "build/favicon.ico",
      "uninstallerIcon": "build/favicon.ico",
      "installerHeaderIcon": "build/favicon.ico"
    },
    "files": [
      "**/*"
    ]
  },
  "devDependencies": {
    "electron": "^27.1.1",
    "electron-builder": "^24.6.3"
  }
}
